{
  "manifest_version": 3,
  "name": "CSS Scan",
  "version": "1.0.0",
  "description": "Inspect and extract CSS properties from any element on a webpage",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_title": "CSS Scan"
  },
  "content_scripts": []
}
